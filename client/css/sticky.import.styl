#board
  width:100%
  height: 100%
  position: absolute

.sticky
  background: hsl(207, 89%, 86%)
  position: absolute
  min-width: 200px
  min-height: 200px
  left: 120px
  top: 200px
  overflow: hidden

  .header
    background: rgba(0, 0, 0, 0.12)
    padding: 0 8px
  .content
    padding: 8px
    outline: none

  .remove
  .add
  .change-color
    cursor: pointer

.new-board-name
  width: 0px
  transition: width .2s, opacity .2s
  padding: 0px 6px
  margin: 4px 8px 0 0
  line-height: 23px
  vertical-align: top
  opacity: 0
  outline: none

.add-board-container
  position: absolute
  top: 8px
  right: 8px
  &:hover .new-board-name
   width: 182px
   opacity: 1

.add-board
  background: none
  border: solid 2px hsl(194, 100%, 17%)
  border-radius: 50%
  outline: none
  width: 32px
  font-size: 22px
  height: 32px
  line-height: 21px
  cursor:pointer


.bg-pattern-1
  background: radial-gradient(rgba(0, 0, 0, 0.13) 14%, rgba(0, 0, 0, 0) 9%) 0 0, radial-gradient(rgba(0, 0, 0, 0.14) 8%, transparent 8%) 8px 8px
  background-size: 16px 16px
