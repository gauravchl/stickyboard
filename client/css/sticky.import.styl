#board
  width:100%
  height: 100%
  position: absolute

.sticky
  background: #E2D633;
  position: absolute;
  min-width: 200px;
  min-height: 200px;
  left: 120px;
  top: 200px;
  overflow: hidden;

  .header
    background: rgba(0, 0, 0, 0.12)
    padding: 0 8px
  .content
    padding: 8px
    outline: none

  .remove
  .add
  .change-color
    cursor: pointer


.bg-pattern-1
  background: radial-gradient(rgba(0, 0, 0, 0.13) 14%, rgba(0, 0, 0, 0) 9%) 0 0, radial-gradient(rgba(0, 0, 0, 0.14) 8%, transparent 8%) 8px 8px
  background-size: 16px 16px
